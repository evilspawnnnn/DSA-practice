//Isosceles triangle pattern
#include <iostream>
using namespace std;
int main(){
    int n;
    cin>>n;
    int i=1;
    while(i<=n){
        int k=1;
        while(k<=n-i){
            cout<<' ';
            k++;
        }
        int j=1;
        while(j<=i){
            cout<<j;
            j++;
        }
        int l=i-1;
        while(l>0){
            cout<<l;
            l--;
        }
        cout<<endl;
        i++;
    }
}
