//Triangle of numbers pattern
#include <iostream>
using namespace std;

int main() {
    int n;
    cin>>n;
    int i=1;
    while(i<=n){
		int k=1;
        while(k<=n-i){
			cout<<' ';
            k++;
        }
        int j=1;
        int val=i;
        while(j<=i){
			cout<<val;
            val++;
            j++;
        }
        int l=n+1;
        int p=2*(i-1);
        while(l<n+i){
            cout<<p;
            p--;
            l++;
        }
        cout<<endl;
        i++;
    }
}

